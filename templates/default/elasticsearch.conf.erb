check process elasticsearch
  <% if node['monit']['elasticsearch']['pidfile'] %>
    with pidfile <%= node['monit']['elasticsearch']['pidfile'] %>
  <% else %>
    with pidfile /usr/local/var/run/elasticsearch.pid
  <% end %>
   group elasticsearch
   start program = "/etc/init.d/elasticsearch start"
   stop  program = "/etc/init.d/elasticsearch stop"
   if failed host 127.0.0.1 port 9200 then restart
   if 3 restarts within 6 cycles then timeout
